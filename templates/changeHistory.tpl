<h3>Change History</h3>
<table class="sub-form">
  <tr>
    <td>
      <div id="changelog">
        <!-- BEGIN changelog_repeat -->
        <div class="change">
          <h3 class="change">
            <span class="exact-date">{EXACT_DATE}</span>Changed
            {RELATIVE_DATE} ago by {USERNAME}
          </h3>
          <!-- BEGIN status_update -->
          <ul>
            <li>Status changed from <em>{FROM_STATE}</em> to <em>{TO_STATE}</em>
            </li>
          </ul>
          <!-- END status_update -->

          <!-- BEGIN comment -->
          <div class="comment">{NOTE}</div>
          <!-- END comment -->
        </div>
        <!-- END changelog_repeat -->
      </div></td>
  </tr>
</table>