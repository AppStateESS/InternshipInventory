<h3>Change History</h3>
<div id="changelog">
  <!-- BEGIN changelog_repeat -->
  <div class="change">
    <h3 class="change">
      <span class="exact-date">{EXACT_DATE}</span>Changed {RELATIVE_DATE} ago by {USERNAME}
    </h3>
    <!-- BEGIN status_update -->
    <ul>
      <li>Status changed from <strong>{FROM_STATE}</strong> to <strong>{TO_STATE}</strong>
      </li>
    </ul>
    <!-- END status_update -->

    <!-- BEGIN comment -->
    <div class="comment">{NOTE}</div>
    <!-- END comment -->
  </div>
  <!-- END changelog_repeat -->
</div>